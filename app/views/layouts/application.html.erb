<!DOCTYPE html>
<html>
  <head>
    <title>StackOverflowClone</title>
    <%= csrf_meta_tags %>

    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>

  <body>
    <div class="container">
      <% if current_user %>
      <%= current_user.email %> | <%= link_to "Sign Out", session_path(current_user),
                                                  :data => {:confirm => "Are you sure you want to sign out?",
                                                  :method => "delete"} %>
      <% else %>
        <%= link_to "Sign up", new_user_path %> | <%= link_to "Sign in", new_session_path %>
      <% end %>

      <% if flash[:notice] != nil %>
        <div class="alert alert-success">
          <%= flash[:notice] %>
        </div>
      <% end %>

      <% if flash[:alert] != nil %>
        <div class="alert alert-danger">
          <%= flash[:alert] %>
        </div>
      <% end %>

      <%= yield %>
    </div>
  </body>
</html>
